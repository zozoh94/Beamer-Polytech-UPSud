% Commands for the department logos.
\newcommand{\deptlogo}[1]{
 \fontfamily{zlo}\selectfont/%
 \ifthenelse{\equal{#1}{ele}}{e}{}%
 \ifthenelse{\equal{#1}{eleuk}}{\bfseries e}{}%
 \ifthenelse{\equal{#1}{win}}{k}{}%
 \ifthenelse{\equal{#1}{winuk}}%
   {\fontfamily{zmb}\selectfont\bfseries\,department of mathematics and 
    computer science}{}%
 \ifthenelse{\equal{#1}{bmt}}{mh\fontsize{4.5}{5pt}\selectfont j}{}%
 \ifthenelse{\equal{#1}{bmtuk}}{\bfseries mh\fontsize{4.5}{5pt}\selectfont j}{}%
 \ifthenelse{\equal{#1}{bwk}}{b}{}%
 \ifthenelse{\equal{#1}{bwkuk}}{\bfseries b}{}%
 \ifthenelse{\equal{#1}{id}}{d}{}%
 \ifthenelse{\equal{#1}{iduk}}{\bfseries d}{}%
 \ifthenelse{\equal{#1}{chem}}{s}{}%
 \ifthenelse{\equal{#1}{chemuk}}{\bfseries s}{}%
 \ifthenelse{\equal{#1}{tm}}{t}{}%
 \ifthenelse{\equal{#1}{tmuk}}{\bfseries t}{}%
 \ifthenelse{\equal{#1}{phys}}{n}{}%
 \ifthenelse{\equal{#1}{physuk}}{\bfseries n}{}%
 \ifthenelse{\equal{#1}{wtb}}{w}{}%
 \ifthenelse{\equal{#1}{wtbuk}}{\bfseries w}{}%
 \ifthenelse{\equal{#1}{none}}{}{}%
}
